<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style2.css">
    <title>Company</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
    /* Custom styles */
    .gap {
      margin-top: 50px; /* Adjust the gap as needed */
}
</style>
</head>
<body>
    <h1 class="heading">COMPANY</h1>
    <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="card mt-5">
              <div class="card-body">
                <h2 class="text-center mb-4">Register</h2>
                <form method="post" action="/csignup">
                  <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name"  name="name"placeholder="Enter your name" required>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name ="password"placeholder="Enter password" required>
                  </div>
                  <div class="form-group">
                    <label for="password">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmpassword" name="confirmpassword"placeholder="Confirm Your Password" required>
                  </div>
                  <div class="form-group">
                    <label for="email">Enter Email</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="Enter email" required>
                  </div>
                  <div class="form-group">
                    <label for="number">Contact No</label>
                    <input type="number" class="form-control" id="contatcno" name="contactno" placeholder="Contact No" required>
                </div>
                <div class="form-group">
                  <label for="number">Funding Amount(in ETH)</label>
                  <input type="number" class="form-control" id="funding" name="funding" placeholder="Enter Funding Amount" required>
                </div>
                <div class="form-group">
                  <label for="text">Pitch</label>
                  <input type="text" class="form-control" id="pitch" name="pitch" placeholder="Describe your company's aim and investment terms" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">SignUp</button>
              </form>
            </div>
          </div>
        </div>
  
        <!-- Second Table for Signing In -->
        <div class="col-md-6 gap">
          <div class="card mt-5">
            <div class="card-body">
              <h2 class="text-center mb-4">Sign In</h2>
              <form method="post" action="/csignin">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password"name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
              </form>
            </div>
          </div>
        </div>
     </div>
  </div>
</body>
</html>